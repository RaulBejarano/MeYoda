<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Principal"
    android:background="@drawable/universo">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageYoda"
            android:src="@drawable/yoda_img"
            android:layout_marginTop="24dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Correo ElectrÃ³nico"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/email"
            android:background="#4a4a4a"
            android:layout_below="@+id/imageYoda"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Password"
            android:gravity="center"
            android:id="@+id/contrasena"
            android:background="#4a4a4a"
            android:layout_below="@+id/email"
            android:layout_alignLeft="@+id/email"
            android:layout_marginTop="18dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrar"
            android:id="@+id/botonEntrar"
            android:layout_alignLeft="@+id/contrasena"
            android:layout_alignParentBottom="true"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagenLogoYoda"
            android:src="@drawable/meyodalogo"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:id="@+id/botonRegistrar"
            android:layout_alignTop="@+id/botonEntrar"
            android:layout_alignRight="@+id/contrasena"
            android:layout_alignBottom="@+id/botonEntrar"/>
</RelativeLayout>
